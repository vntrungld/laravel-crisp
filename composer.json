{
    "name": "vntrungld/laravel-crisp",
    "description": "A Laravel package for seamless integration with Crisp Chat API including webhook handling and signature verification",
    "license": "MIT",
    "authors": [
        {
            "name": "vntrungld",
            "homepage": "https://github.com/vntrungld"
        }
    ],
    "homepage": "https://github.com/vntrungld/laravel-crisp",
    "keywords": ["Laravel", "LaravelCrisp"],
    "require": {
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "crispchat/php-crisp-api": "^1.7",
        "symfony/http-client": "^7.3",
        "php-http/httplug": "^2.4",
        "nyholm/psr7": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Vntrungld\\LaravelCrisp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vntrungld\\LaravelCrisp\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vntrungld\\LaravelCrisp\\LaravelCrispServiceProvider"
            ],
            "aliases": {
                "LaravelCrisp": "Vntrungld\\LaravelCrisp\\Facades\\LaravelCrisp"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
